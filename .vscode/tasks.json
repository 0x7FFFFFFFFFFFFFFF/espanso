{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo build binary debug",
			"detail": "builds the debug X11 version: modulo, native-tls",
			"type": "cargo",
			"command": "build",
			"args": [
				"--manifest-path",
				"espanso/Cargo.toml",
				"-p",
				"espanso",
				"--no-default-features",
				"--features",
				"modulo native-tls"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
